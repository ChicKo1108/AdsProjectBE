# 环境配置模板
# 复制此文件为 .env.development 或 .env.production 并填入你的配置值

# 应用设置
NODE_ENV=development
PORT=3000
APP_NAME=广告管理平台
APP_VERSION=1.0.0

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=ads
DB_CHARSET=utf8mb4

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# 跨域配置
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# API配置
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000